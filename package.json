{
  "name": "@wcm/solr-am",
  "version": "1.2.0",
  "description": "Solr module",
  "main": "app",
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/.bin/istanbul cover --dir ./coverage ./node_modules/.bin/_mocha -- -R spec -t 15000 --recursive --slow 2"
  },
  "keywords": [
    "solr",
    "search"
  ],
  "publishConfig": {
    "@wcm:registry": "https://nexusrepo.antwerpen.be/repository/npm-private/"
  },
  "wcmModule": {
    "angularDirPath": "public/app/",
    "moduleConfig": {
      "angularModule": "solr-am",
      "translationKey": "Astad Solr",
      "operationType": "solr-am",
      "icon": "map",
      "type": "system",
      "navigationItem": true,
      "authentication": {
        "requiresLogin": true
      }
    },
    "variables": [
      {
        "group": "Solr",
        "key": "solr",
        "enabled": true,
        "accordion": true,
        "variables": [
          {
            "label": "Search API domain",
            "description": "Search API domain.",
            "key": "searchApiDomain",
            "value": "",
            "type": "text",
            "required": true
          },
          {
            "label": "Current domain",
            "description": "Current domain.",
            "key": "currentDomain",
            "value": "",
            "type": "text",
            "required": true
          },
          {
            "label": "Current domain DGV",
            "description": "Current domain DGV.",
            "key": "currentDomainDGV",
            "value": "",
            "type": "text",
            "required": true
          },
          {
            "label": "Consumer key",
            "description": "Your consumer key for Astad SOLR.",
            "key": "consumerKey",
            "value": "",
            "type": "text",
            "required": true
          },
          {
            "label": "Consumer secret",
            "description": "The consumer secret for Astad SOLR",
            "key": "consumerSecret",
            "value": "",
            "type": "text",
            "required": true
          },
          {
            "label": "Project CT ID",
            "description": "Projecten content-type `_id`",
            "key": "projectCT",
            "value": "",
            "type": "text",
            "required": true
          },
          {
            "label": "Ringpark CT ID",
            "description": "Ringparken content-type `_id`",
            "key": "RingparkCT",
            "value": "",
            "type": "text",
            "required": true
          }
        ]
      }
    ]
  },
  "author": "Thomas Bormans",
  "license": "MIT",
  "dependencies": {
    "@wcm/module-helper": "1.0.0",
    "html-to-text": "^3.3.0",
    "lodash": "^4.17.13",
    "node-uuid": "~1.4.7",
    "q": "~1.4.1",
    "ramda": "^0.25.0",
    "request": "~2.79.0",
    "rootpath": "~0.1.2"
  },
  "devDependencies": {
    "@district01/eslint-config": "~1.0.0",
    "@types/bcryptjs": "~2.4.0",
    "apidoc-swagger": "git+https://github.com/JvJefke/apidoc-swagger.git",
    "chai": "~3.5.0",
    "eslint": "~3.19.0",
    "gulp": "~3.9.1",
    "gulp-angular-templatecache": "~2.0.0",
    "gulp-apidoc": "~0.2.0",
    "gulp-apidoc-swagger": "~0.2.2",
    "gulp-clean": "~0.3.2",
    "gulp-replace": "~0.5.4",
    "gulp-zip": "~3.2.0",
    "install": "~0.8.4",
    "istanbul": "~0.4.5",
    "jshint": "~2.9.4",
    "mocha": "~3.4.1",
    "mockery": "~2.0.0",
    "mongoose": "~4.9.9",
    "nock": "~9.0.13",
    "node-uuid": "~1.4.8",
    "rewire": "~2.5.2",
    "run-sequence": "~1.2.2"
  }
}
